@model EmployeeViewModel

@inject IUnitOfWork _unitOfWork

@{
    var departments = new SelectList(await _unitOfWork.DepartmentRepository.GetAllAsync(), nameof(Department.Id), nameof(Department.Name));
}

<div class="form-outline form-group" data-mdb-input-init>
    <label class="col-form-label" asp-for="Name"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-outline form-group" data-mdb-input-init>
    <label class="col-form-label" asp-for="Age"></label>
    <input asp-for="Age" class="form-control" />
    <span asp-validation-for="Age" class="text-danger"></span>
</div>
<div class="form-outline form-group" data-mdb-input-init>
    <label class="col-form-label" asp-for="Email"></label>
    <input asp-for="Email" class="form-control" />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>
<div class="form-outline form-group" data-mdb-input-init>
    <label class="col-form-label" asp-for="Address"></label>
    <input asp-for="Address" class="form-control" />
    <span asp-validation-for="Address" class="text-danger"></span>
</div>
<div class="form-outline form-group" data-mdb-input-init>
    <label class="col-form-label" asp-for="Salary"></label>
    <input asp-for="Salary" class="form-control" />
    <span asp-validation-for="Salary" class="text-danger"></span>
</div>
<div class="form-outline form-group" data-mdb-input-init>
    <label class="col-form-label" asp-for="HiringDate"></label>
    <input asp-for="HiringDate" class="form-control" />
    <span asp-validation-for="HiringDate" class="text-danger"></span>
</div>

 <div class="form-outline form-group" data-mdb-input-init>
    <label class="col-form-label" asp-for="Gender"></label>
    <br />

    @foreach (Route.C41.PL.Models.Gender genderOption in Enum.GetValues(typeof(Route.C41.PL.Models.Gender)))
    {
        <label class="radio-inline">
            <input type="radio" asp-for="Gender" value="@genderOption" />
            @genderOption
        </label>
    }

</div>

<div class="form-group col-md-4">
    <label asp-for="EmployeeType" class="col-form-label"></label>
    <br />
    @foreach (Route.C41.PL.Models.EmpType EmployeeType in Enum.GetValues(typeof(Route.C41.PL.Models.EmpType)))
    {
        <label class="radio-inline">
            <input type="radio" asp-for="EmployeeType" value="@EmployeeType" />
            @EmployeeType
        </label>
    }
</div>

<div class="form-check my-3">
    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
    <label class="form-check-label " asp-for="IsActive"></label>
</div>



<div class="form-group col-md-4">
    <label asp-for="Department" class="col-form-label"></label>
    <select asp-items="@departments" asp-for="DepartmentId" class="form-control">
        <option value="@null">--Select Department--</option>
    </select>
</div>


<div class="form-group">
    <label class="col-form-label" asp-for="Image">Image</label>
    <input asp-for="Image" class="form-control-file" />
</div>

