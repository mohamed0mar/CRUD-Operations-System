@model EmployeeViewModel

@inject IUnitOfWork _unitOfWork

@{
    var departments = new SelectList(await _unitOfWork.DepartmentRepository.GetAllAsync(), nameof(Department.Id), nameof(Department.Name));
}

<div class="d-flex align-items-center">
    <img src="~/files/images/@Model.ImageName"
         alt="Employee Image"
         style="width: 45px; height: 45px"
         class="rounded-circle" />
</div>


<div class="form-outline form-group" data-mdb-input-init>
    <label class="col-form-label" asp-for="Name"></label>
    <input asp-for="Name" class="form-control" readonly />
</div>

<div class="form-outline form-group" data-mdb-input-init>
    <label class="col-form-label" asp-for="Age"></label>
    <input asp-for="Age" class="form-control" readonly />
</div>

<div class="form-outline form-group" data-mdb-input-init>
    <label class="col-form-label" asp-for="Email"></label>
    <input asp-for="Email" class="form-control" readonly />
</div>

<div class="form-outline form-group" data-mdb-input-init>
    <label class="col-form-label" asp-for="Address"></label>
    <input asp-for="Address" class="form-control" readonly />
</div>

<div class="form-outline form-group" data-mdb-input-init>
    <label class="col-form-label" asp-for="Salary"></label>
    <input asp-for="Salary" class="form-control" readonly />
</div>

<div class="form-outline form-group" data-mdb-input-init>
    <label class="col-form-label" asp-for="HiringDate"></label>
    <input asp-for="HiringDate" class="form-control" readonly />
</div>

<div class="form-outline form-group" data-mdb-input-init>
    <label class="col-form-label" asp-for="Gender"></label>
    <input asp-for="Gender" class="form-control" readonly />
</div>


<div class="form-check my-3">
    <input asp-for="IsActive" class="form-check-input" type="checkbox" disabled />
    <label class="form-check-label " asp-for="IsActive"></label>
</div>

<div class="form-group col-md-4">
    <label asp-for="Department" class="col-form-label"></label>
    <select asp-items="@departments" asp-for="DepartmentId" class="form-control" disabled>
        <option value="@null">--Select Department--</option>
    </select>
</div>